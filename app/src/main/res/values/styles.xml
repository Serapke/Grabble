<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="GrabbleTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppNameFullSize">
        <item name="android:textColor">#3498db</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="UserStatsInfo">
        <item name="android:background">#f39c12</item>
    </style>

    <style name="UserStatsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="GrabbleTheme" parent="AppTheme" />

</resources>
